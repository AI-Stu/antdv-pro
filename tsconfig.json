{
  "extends": "@cosing/tsconfig/web.json",
  "compilerOptions": {
    "target": "ES2020",

    /* Bundler mode */
    "allowImportingTsExtensions": true, 

    // paths
    "baseUrl": ".",
    "paths": {
      "~@/*": ["src/*"],
      "~/*": ["src/*"],
      "@/*": ["src/*"],
      "~#/*": ["src/enums/*"],
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "types/**/*.d.ts"],
  // "references": [{ "path": "./tsconfig.node.json" }]
}
